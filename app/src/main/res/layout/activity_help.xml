<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_layout">
        <TextView
            android:id="@+id/helpTd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="투두리스트"
            android:textColor="#0000ff"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/helpTd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오른쪽 +버튼을 눌러 일정을 추가/편집할 수 있습니다."
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/helpTd1"/>
        <TextView
            android:id="@+id/helpTd3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="체크박스를 이용하여 완료한 일정을 표시할 수 있습니다."
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/helpTd2"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_layout">
        <TextView
            android:id="@+id/helpTm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="타이머"
            android:textColor="#0000ff"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/helpTm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시,분,초를 모두 설정 후 시작해주세요."
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/helpTm1"/>
        <TextView
            android:id="@+id/helpTm3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용하지 않는 단위에는 0을 입력해주세요."
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/helpTm2"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_layout">
        <TextView
            android:id="@+id/helpSw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스탑워치"
            android:textColor="#0000ff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/helpSw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[시작]버튼을 눌러 스탑워치를 시작하고, [기록]버튼을 눌러 시간을 기록하세요."
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/helpSw1"/>
        <TextView
            android:id="@+id/helpSw3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[멈춤]버튼을 눌러 스탑워치를 일시정지하고, [리셋]버튼을 눌러 스탑워치를 초기화 시킬 수 있습니다."
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/helpSw2"/>
    </RelativeLayout>


</LinearLayout>